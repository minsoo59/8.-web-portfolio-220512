extends strategyBase

block uploadList
    h4#pageTitle=pageTitle
    form(method="POST")
        input(name="title" placeholder="Writnig title" value=writing.title required)
        input(placeholder="Description", required, type="text", name="description" minlength=20 value=writing.description)
        input(placeholder="Hashtags, seperated by comma.", required, type="text", name="hashtags" value=writing.hashtags.join())
        input(value="save" type="submit")